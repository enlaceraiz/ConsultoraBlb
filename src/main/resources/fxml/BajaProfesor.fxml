<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gestionhorasapp.consultorablb.controladores.BajaProfesorController">
    <children>
        <VBox spacing="10" alignment="TOP_CENTER" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <Label text="Baja de Profesores" style="-fx-font-size: 18px;"/>

            <HBox spacing="10">
                <Label text="Selecciona un Profesor:"/>
                <ComboBox fx:id="profesorComboBox" promptText="Selecciona un profesor" prefWidth="200"/>
            </HBox>

            <Button text="Eliminar" fx:id="eliminarButton" onAction="#eliminarProfesor"/>
        </VBox>
    </children>
</AnchorPane>
