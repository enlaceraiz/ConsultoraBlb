<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gestionhorasapp.consultorablb.controladores.ModificacionAlumnoController">
    <children>
        <VBox spacing="10" alignment="TOP_CENTER" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <Label text="Modificación de Alumnos" style="-fx-font-size: 18px;"/>

            <!-- Filtros -->
            <HBox spacing="10">
                <Label text="Empresa:"/>
                <ComboBox fx:id="empresaComboBox" promptText="Selecciona una empresa" prefWidth="200"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Grupo:"/>
                <ComboBox fx:id="grupoComboBox" promptText="Selecciona un grupo" prefWidth="200"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Alumno:"/>
                <ComboBox fx:id="alumnoComboBox" promptText="Selecciona un alumno" prefWidth="200"/>
            </HBox>

            <!-- Campos de modificación -->
            <HBox spacing="10">
                <Label text="Nombre:"/>
                <TextField fx:id="nombreField" promptText="Nombre del Alumno" prefWidth="200"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Apellido:"/>
                <TextField fx:id="apellidoField" promptText="Apellido del Alumno" prefWidth="200"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Email:"/>
                <TextField fx:id="emailField" promptText="Email del Alumno" prefWidth="200"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Nivel de Idioma:"/>
                <ComboBox fx:id="nivelIdiomaComboBox" promptText="Selecciona un nivel" prefWidth="200"/>
            </HBox>

            <Button text="Guardar Cambios" fx:id="guardarButton" onAction="#guardarCambios"/>
        </VBox>
    </children>
</AnchorPane>